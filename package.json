{
  "name": "eafc26-kit",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "build": "nx build",
    "test": "nx test",
    "lint": "nx lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "npm run format:check && npm run lint && npm run test",
    "dev": "nx run-many --target=serve --projects=control-panel,api --parallel",
    "dev:control-panel": "nx serve control-panel",
    "dev:api": "nx serve api",
    "dev:solver": "nx run sbc-solver:serve",
    "db:migrate": "nx run database:migrate",
    "db:generate": "nx run database:generate",
    "db:studio": "nx run database:studio",
    "db:reset": "tools/scripts/db-reset.sh",
    "generate:module": "tools/scripts/generate-module.sh",
    "prepare": "husky"
  },
  "private": true,
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "prettier --write"
    ],
    "*.py": [
      "black"
    ]
  },
  "devDependencies": {
    "@nx/eslint": "^20.0.0",
    "@nx/eslint-plugin": "^20.0.0",
    "@nx/js": "^20.0.0",
    "@nx/next": "^20.0.0",
    "@nx/node": "^20.0.0",
    "@nx/workspace": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nx": "^20.0.0",
    "prettier": "^3.7.4",
    "typescript": "^5.3.0"
  }
}
